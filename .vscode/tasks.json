{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "osx": {
                "command": "make -C <path/to/makefile/dir>"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "cd ${env:PROJ_DIR} && ceedling release && ./${env:EXEC_NAME}"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "linux": {
                "command": "cd ${env:PROJ_DIR} && cd include/libft && ceedling release && cd ../.. && ceedling",
                "options": {
                    "env": {
                        "ceedling_projdir": "${env:PROJ_DIR}"
                    }
                }
            },
            "problemMatcher": []
        },
		{
			"label": "debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"linux": {
				"command": "cd ${env:PROJ_DIR} && make"
			}
		}
    ]
}